#!/bin/sh

set -e
set -x

apt-get update

env DEBIAN_FRONTEND=noninteractive apt-get install -f -y --no-install-recommends \
	build-essential                                                          \
	ca-certificates                                                          \
	cryptsetup                                                               \
	git                                                                      \
	libgpgme11-dev                                                           \
	libseccomp-dev                                                           \
	libssl-dev                                                               \
	pkg-config                                                               \
	squashfs-tools                                                           \
	sudo                                                                     \
	uuid-dev

apt-get clean

rm -rf /var/lib/apt/lists/*

echo 'ALL ALL=(ALL:ALL) NOPASSWD:ALL' > /etc/sudoers
